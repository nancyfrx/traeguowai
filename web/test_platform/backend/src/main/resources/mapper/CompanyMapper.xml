<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testplatform.backend.repository.CompanyRepository">

    <resultMap id="CompanyResultMap" type="com.testplatform.backend.entity.Company">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="website" column="website"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findById" resultMap="CompanyResultMap">
        SELECT * FROM companies WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="CompanyResultMap">
        SELECT * FROM companies
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO companies (name, address, website, created_at, updated_at)
        VALUES (#{name}, #{address}, #{website}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update">
        UPDATE companies
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="address != null">address = #{address},</if>
            <if test="website != null">website = #{website},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM companies WHERE id = #{id}
    </delete>

    <select id="findByName" resultMap="CompanyResultMap">
        SELECT * FROM companies WHERE name = #{name}
    </select>

</mapper>
