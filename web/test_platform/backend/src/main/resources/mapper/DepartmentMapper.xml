<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testplatform.backend.repository.DepartmentRepository">

    <resultMap id="DepartmentResultMap" type="com.testplatform.backend.entity.Department">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="companyId" column="company_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="createdAt" column="created_at"/>
        <association property="company" column="company_id" select="com.testplatform.backend.repository.CompanyRepository.findById"/>
    </resultMap>

    <select id="findById" resultMap="DepartmentResultMap">
        SELECT * FROM departments WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="DepartmentResultMap">
        SELECT * FROM departments
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO departments (name, company_id, parent_id, created_at)
        VALUES (#{name}, #{companyId}, #{parentId}, #{createdAt})
    </insert>

    <update id="update">
        UPDATE departments
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="companyId != null">company_id = #{companyId},</if>
            <if test="parentId != null">parent_id = #{parentId}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM departments WHERE id = #{id}
    </delete>

    <select id="findByCompanyId" resultMap="DepartmentResultMap">
        SELECT * FROM departments WHERE company_id = #{companyId}
    </select>

</mapper>
