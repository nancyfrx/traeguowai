<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testplatform.backend.repository.ProjectRepository">

    <resultMap id="ProjectResultMap" type="com.testplatform.backend.entity.Project">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="departmentId" column="department_id"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="department" column="department_id" select="com.testplatform.backend.repository.DepartmentRepository.findById"/>
    </resultMap>

    <select id="findById" resultMap="ProjectResultMap">
        SELECT * FROM projects WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="ProjectResultMap">
        SELECT * FROM projects
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO projects (name, department_id, description, created_at, updated_at)
        VALUES (#{name}, #{departmentId}, #{description}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update">
        UPDATE projects
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="departmentId != null">department_id = #{departmentId},</if>
            <if test="description != null">description = #{description},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM projects WHERE id = #{id}
    </delete>

    <select id="findByDepartmentId" resultMap="ProjectResultMap">
        SELECT * FROM projects WHERE department_id = #{departmentId}
    </select>

</mapper>
