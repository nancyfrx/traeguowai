<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.testplatform.backend.repository.AIGenerationRecordMapper">
    
    <resultMap id="BaseResultMap" type="com.testplatform.backend.entity.AIGenerationRecord">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="input_content" property="inputContent" jdbcType="VARCHAR"/>
        <result column="generated_content" property="generatedContent" jdbcType="VARCHAR"/>
        <result column="upload_file_name" property="uploadFileName" jdbcType="VARCHAR"/>
        <result column="model" property="model" jdbcType="VARCHAR"/>
        <result column="operator" property="operator" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_generation_record (input_content, generated_content, upload_file_name, model, operator, created_at)
        VALUES (#{inputContent}, #{generatedContent}, #{uploadFileName}, #{model}, #{operator}, NOW())
    </insert>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM ai_generation_record ORDER BY created_at DESC
    </select>

</mapper>
