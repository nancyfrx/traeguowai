<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testplatform.backend.repository.ModuleRepository">

    <resultMap id="ModuleResultMap" type="com.testplatform.backend.entity.Module">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="projectId" column="project_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="project" column="project_id" select="com.testplatform.backend.repository.ProjectRepository.findById"/>
    </resultMap>

    <select id="findById" resultMap="ModuleResultMap">
        SELECT * FROM modules WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="ModuleResultMap">
        SELECT * FROM modules
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO modules (name, project_id, parent_id, created_at, updated_at)
        VALUES (#{name}, #{projectId}, #{parentId}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update">
        UPDATE modules
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="projectId != null">project_id = #{projectId},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM modules WHERE id = #{id}
    </delete>

    <select id="findByProjectId" resultMap="ModuleResultMap">
        SELECT * FROM modules WHERE project_id = #{projectId}
    </select>

    <select id="findByProjectIdAndParentId" resultMap="ModuleResultMap">
        SELECT * FROM modules WHERE project_id = #{projectId} AND parent_id = #{parentId}
    </select>

    <select id="findByProjectIdAndParentIdIsNull" resultMap="ModuleResultMap">
        SELECT * FROM modules WHERE project_id = #{projectId} AND parent_id IS NULL
    </select>

    <select id="findByParentId" resultMap="ModuleResultMap">
        SELECT * FROM modules WHERE parent_id = #{parentId}
    </select>

</mapper>
